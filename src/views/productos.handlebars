
<div>
    {{#each productos.docs}}
    <div>
        <table class="table">
    <thead>
      <tr>
        <th scope="col">{{this.title}}</th>
        <th scope="col">{{this.type}}</th>
        <th scope="col">{{this.price}}</th>
        <th scope="col">{{this.thumbnail}}</th>
        <button type="button" class="btn btn-primary">Comprar</button>
      </tr>
    </thead>
    <tbody id="productosContenedor">

    </tbody>
  </table>
    </div>
    {{/each}}
  
    <div>
      {{#if productos.hasPrevPage}}
          <a href="{{productos.prevLink}}">Anterior</a>
      {{/if}}
    {{#if productos.hasNextPage}}
    <a href="{{productos.nextLink}}">Siguiente</a>
    {{/if}}
    </div>
    
</div>